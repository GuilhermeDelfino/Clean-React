{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Node",
    "baseUrl": "src",
    "jsx": "react",
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "paths": {
        "@data/*": ["./data/*"],
        "@domain/*": ["./domain/*"],
    }
  },
  "include": ["src"]
}
